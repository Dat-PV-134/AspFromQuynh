@model IEnumerable<Lab01.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Department.deptname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Department.deptname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.salary)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.image)*@
            @{ 
                string path = "~/Content/Images/" + item.image;

            }
            <img src="@Url.Content(path)" class="img-thumbnail" />
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.eid }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.eid }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.eid })
        </td>
    </tr>
}

</table>
