
@{
    ViewBag.Title = "Index";
}

<h2>Calculate Ajax Demo</h2>
<h4>Number 1 <input type="text" id="num1" /></h4>
<h4>Number 2 <input type="text" id="num2" /></h4>
<input type="button" id="btn1" value="Add" />
<div id="rs" style="font-size: large"></div>

<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $(document).ready(function () {
        $("#btn1").click(function () {
            var n1 = $("#num1").val();
            var n2 = $("#num2").val();
            <h1>n1</h1>

            $.ajax({
                url: 'Url.Action("Math", "AjaxDemo1")?n1=' + n1 + '&n2=' + n2,
                success: function (data) {
                    if (data.status == "OK") {
                        $("#rs").html(data.rs);
                    }
                }
            });
        });
    });
</script>