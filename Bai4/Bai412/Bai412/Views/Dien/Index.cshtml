
@{
    ViewBag.Title = "Index";
}

<form action="/Dien/XuLy" method="post">
    <table border="1" width="700px" height="300px" class="table-bordered">
        <tr>
            <th colspan="3" class="text-center">Tính tiền điện</th>
        </tr>
        <tbody>
            <tr>
                <td>Họ và tên chủ hộ: </td>
                <td>
                    <input type="text" name="name" />
                </td>
                <td>
                    <input type="checkbox" name="hoUuTien" value="true" />Hộ ưu tiên
                </td>
            </tr>
            <tr>
                <td>Loại điện tiêu thụ: </td>
                <td colspan="2">
                    <select name="loaiTT" style="width: 200px">
                        <option value="0">Sinh hoạt</option>
                        <option value="1">Kinh doanh</option>
                        <option value="2">Sản xuất</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Vào chỉ số cũ: </td>
                <td colspan="2">
                    <input type="number" name="soCu" /> <b>KW</b>
                </td>
            </tr>
            <tr>
                <td>Vào chỉ số mới: </td>
                <td colspan="2">
                    <input type="number" name="soMoi" /> <b>KW</b>
                </td>
            </tr>
            <tr>
                <td colspan="3" class="text-center">
                    <button type="submit" name="btnTinh">Tính</button>
                </td>
            </tr>
        </tbody>
    </table>
</form>


