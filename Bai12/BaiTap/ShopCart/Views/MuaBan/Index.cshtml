@model IEnumerable<ShopCart.Models.SanPham>

<h2>Cửa hàng online</h2>
<h4>Qúy khách chọn mua các sản phẩm dưới đây</h4>

<table class="table-bordered" width="800">
    <tr style="background-color:#ffffcc">
        <td align="center">Mã sản phẩm</td>
        <td>Tên sản phẩm</td>
        <td>Hình ảnh</td>
        <td align="center">Gía tiền</td>
        <td>Mua hàng</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">@item.masp</td>
            <td>@item.tensp</td>
            <td align="center">
                <img src="~/Content/Hinhanh/@item.hinhanh" width="150" />
            </td>
            <td align="center">@item.giatien</td>
            <td align="center">
                @Html.ActionLink("Chọn mua", "ChonMua", "MuaBan", new ShopCart.Models.SanPham { masp = item.masp }, null)
            </td>
        </tr>
    }
</table>
<br />
<br />
@Html.ActionLink("Xem giỏ hàng", "XemGioHang", "MuaBan")

